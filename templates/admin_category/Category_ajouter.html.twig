{% extends "base.html.twig" %}

{% block title %}
    {{ parent() }} | Ajouter une catégorie
{% endblock title %}

{% block h1 %}
    Ajouter une catégorie
{% endblock h1 %}

{% block body %}
    
    {{ form_start(formCategory) }}
    <div class="col-md-10 mx-auto">
        {{ form_row(formCategory.nom) }}
    </div>
    <div class="row justify-content-center">
        <input type="submit" class="btn btn-success mt-3 col-md-6" value="Ajouter">
    </div>

    {{ form_end(formCategory) }}




    <div class=" row justify-content-end">
        <a href=" {{ path('category_afficher') }} " class="btn btn-info p-2 col-md-3">Retour</a>
    </div>

{% endblock body %}